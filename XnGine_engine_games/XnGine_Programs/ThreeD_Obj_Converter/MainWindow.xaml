<Window x:Class="ThreeD_Obj_Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ThreeD_Obj_Converter"
        xmlns:mvvm="clr-namespace:ThreeD_Obj_Converter.MVVM"
        DataContext="{StaticResource MainWindowMvvm}"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="450">
	<Window.Resources>
		<mvvm:MainWindowMvvm x:Key="MainWindowMvvm" />
	</Window.Resources>
	<StackPanel>
	    <TabControl>
		    <TabItem Header="Convert 3D to OBJ">
			    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
				    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,10,10,0">
					    <Button Command="{Binding Select3dFileToConvert, BindsDirectlyToSource=true}">Input 3D model</Button>
					    <TextBox Text="{Binding Input3DModelTextBox}" MinWidth="250"></TextBox>
					    <Button>Clear</Button>
				    </StackPanel>

				    <TextBlock VerticalAlignment="Center" TextAlignment="Center">OR</TextBlock>

				    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,0,10,20">
					    <Button>Input 3D models folder</Button>
					    <TextBox Text="{Binding Input3DModelsFolderTextBox}" MinWidth="210"></TextBox>
					    <Button>Clear</Button>
				    </StackPanel>

				    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,0,10,30">
					    <Button>Output folder</Button>
					    <TextBox Text="{Binding OutputObjModelsFolderTextBox}" MinWidth="260"></TextBox>
					    <Button>Clear</Button>
				    </StackPanel>

				    <TextBlock Margin="10,0,10,5" TextAlignment="Center">
					    Treatment of header offsets and body lengths?
				    </TextBlock>

				    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10,0,10,20">
					    <RadioButton Margin="4,0,4,0" IsChecked="True">Enforce both</RadioButton>
					    <RadioButton Margin="4,0,4,0">Enforce offsets only</RadioButton>
					    <RadioButton Margin="4,0,4,0">Enforce lengths only</RadioButton>
				    </StackPanel>

				    <Button Margin="10,0,10,10" Width="100">Convert</Button>
			    </StackPanel>
		    </TabItem>
		    <TabItem Header="Convert OBJ to 3D">
			    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
			    </StackPanel>
		    </TabItem>
	    </TabControl>
    </StackPanel>
</Window>
